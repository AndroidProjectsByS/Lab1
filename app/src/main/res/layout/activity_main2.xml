<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Imię"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center_horizontal|right"/>

    <EditText
        android:id="@+id/nameView"
        android:layout_toRightOf="@+id/nameLabel"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"/>

    <TextView
        android:id="@+id/surnameLabel"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameLabel"
        android:text="Nazwisko"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center_vertical|right"/>

    <EditText
        android:id="@+id/surnameView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/surnameLabel"
        android:layout_below="@+id/nameView"
        android:layout_weight="5"/>

    <TextView
        android:id="@+id/numberOfRatesLabel"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surnameLabel"
        android:text="Ilość ocen"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center_vertical|right"/>

    <EditText
        android:id="@+id/numberOfRatesView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surnameView"
        android:layout_toRightOf="@+id/numberOfRatesLabel"
        android:inputType="numberDecimal|numberSigned"/>


    <TextView
        android:id="@+id/averageLabel"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberOfRatesLabel"
        android:text="Średnia"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center_vertical|right"/>

    <TextView
        android:id="@+id/averageValue"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberOfRatesView"
        android:layout_toRightOf="@+id/averageLabel"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center_vertical|left"
        android:text="0.00"/>


    <Button
        android:id="@+id/rateButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/averageLabel"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:text="Oceny"/>

    <Button
        android:id="@+id/finishButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rateButton"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:text="Message"/>


</RelativeLayout>