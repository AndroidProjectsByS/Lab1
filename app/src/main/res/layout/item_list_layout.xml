<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    >

    <TextView
        android:id="@+id/rateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Ocena"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:gravity="center_horizontal|right"/>

    <RadioGroup
        android:id="@+id/rateGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rateLabel"
        android:orientation="horizontal"
        android:layout_marginTop="7dp"
        >


        <RadioButton android:id="@+id/rate_value2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="2"
            android:buttonTint="@android:color/black"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            />

        <RadioButton android:id="@+id/rate_value3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="3"
            android:buttonTint="@android:color/black"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            />
        <RadioButton android:id="@+id/rate_value4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="4"
            android:buttonTint="@android:color/black"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            />
        <RadioButton android:id="@+id/rate_value5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="5"
            android:buttonTint="@android:color/black"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            />



    </RadioGroup>

